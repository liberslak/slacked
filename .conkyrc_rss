# Slackware Conky Google Now Dark style #

# Conky settings #
background no
update_interval 57
double_buffer yes
no_buffers yes

# Window specifications #
own_window yes
own_window_class Conky
own_window_type normal
own_window_hints undecorated,below,sticky,skip_taskbar
own_window_transparent no
own_window_argb_visual yes
own_window_argb_value 150

minimum_size 834
maximum_width 298

# Alignment #
alignment top_left
gap_x 770
gap_y 54

border_inner_margin 17
border_outer_margin 0

# Graphics settings #
draw_shades yes
draw_outline no
draw_borders no
draw_graph_borders no

# Text settings #
use_xft yes
xftalpha 0.2
xftfont Open Sans Light:size=10
# xftfont pftempestafivecondensed:size=12

override_utf8_locale yes

imlib_cache_size 0

# Color scheme - Tango Palette #
default_color BABDB6 # aluminium

color1 C4A000 # butter
color2 CE5C00 # orange
color3 8F5902 # chocolate
#color4 4E9A06 # chamemelon
color4 FFFFFF # gris
color5 204A87 # skyblue
color6 5C3566 # Plum
color7 CC0000 # scarlet red
color8 BABDB6 # aluminium
color9 A23436 # oil
color0 55ff00 # green

